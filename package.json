{
  "name": "root",
  "private": true,
  "engines": {
    "yarn": ">=1.17.3"
  },
  "dependencies": {
    "@types/react": "^16.9.35",
    "eslint": "^7.2.0",
    "lerna": "^3.22.1",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-i18next": "^11.5.0",
    "typescript": "^3.9.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start --parallel",
    "test": "lerna run test",
    "format": "prettier --write \"**/*.ts\"  \"!**/lib/**\"",
    "lint": "lerna run lint --",
    "build": "lerna run build",
    "build:doc": "rimraf -rf docs && typedoc",
    "publish": "lerna publish --yes",
    "link": "for package in react react-dom react-router-dom aws-amplify; do cd node_modules/$package && yarn link && cd ../..; done && lerna exec yarn link",
    "unlink": "for package in react react-dom react-router-dom aws-amplify; do cd node_modules/$package && yarn unlink && cd ../..; done && lerna exec yarn unlink",
    "storybook": "start-storybook -p 6006",
    "build:storybook": "build-storybook -o build/storybook"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "prepare-commit-msg",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint --fix"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-controls": "^6.0.0-beta.15",
    "@storybook/addon-docs": "^5.3.19",
    "@storybook/addon-info": "^6.0.0-alpha.2",
    "@storybook/addon-knobs": "^5.3.19",
    "@storybook/addon-links": "^5.3.19",
    "@storybook/addon-storysource": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/react": "^5.3.19",
    "@storybook/theming": "^5.3.19",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "babel-loader": "^8.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "typedoc": "^0.17.7",
    "typedoc-plugin-nojekyll": "^1.0.1"
  }
}
