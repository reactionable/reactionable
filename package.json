{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna bootstrap && lerna run --parallel start --",
    "test": "lerna run --stream test --",
    "test:ci": "lerna run --stream test:coverage --",
    "format": "prettier --cache --write '**/*.ts' '!**/lib/**'",
    "lint": "lerna run --stream lint --",
    "build": "lerna run --stream build --",
    "build:ci": "lerna run --stream build:ci --",
    "build:all": "yarn build:ci && yarn docs:build && yarn storybook:build",
    "link": "node dev-link link",
    "unlink": "node dev-link unlink",
    "docs:build": "lerna run --stream build:docs",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "yarn build-storybook -o build/storybook",
    "storybook:deploy": "storybook-to-ghpages -e build/storybook --ci",
    "prepare": "ts-dev-tools install",
    "ci": "yarn lint && yarn build:all && yarn test:ci",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@storybook/addon-docs": "^9.1.4",
    "@storybook/addon-links": "^9.1.4",
    "@storybook/addon-onboarding": "^9.1.4",
    "@storybook/react-vite": "^9.1.4",
    "@ts-dev-tools/react": "^1.9.7",
    "barrelsby": "^2.5.1",
    "eslint-plugin-storybook": "^9.1.3",
    "lerna": "^8.2.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "remark-gfm": "^4.0.0",
    "rimraf": "^6.0.1",
    "storybook": "^9.1.8",
    "typedoc": "^0.28.14",
    "vite": "^7.1.11"
  },
  "resolutions": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "semi": true,
    "printWidth": 100,
    "trailingComma": "es5",
    "plugins": [
      "@prettier/plugin-oxc"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-nx-scopes"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "tsDevTools": {
    "version": "20250623095500-add-prettier-oxc"
  }
}
