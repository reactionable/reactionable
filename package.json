{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.11.2",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-formatter-friendly": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.9",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "start": "npm run link --parallel && lerna run start --parallel",
    "test": "jest",
    "format": "prettier --write \"**/*.ts\"  \"!**/lib/**\"",
    "lint": "eslint \"packages/**/{src,__tests__}/**/*.ts\" -f eslint-formatter-friendly",
    "build": "lerna run build && lerna bootstrap",
    "update": "npm-check -u & (cd packages/core && npm run update & cd ../..) & (cd packages/amplify && npm run update & cd ../..) & (cd packages/ui-bootstrap && npm run update & cd ../..) & (cd packages/graphql && npm run update & cd ../..)",
    "publish": "lerna publish",
    "link": "lerna run link"
  },
  "dependencies": {
    "lerna": "^3.18.3"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "prepare-commit-msg",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
