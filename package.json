{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna bootstrap && lerna run --parallel start --",
    "test": "lerna run --stream test --",
    "test:coverage": "lerna run --stream test:coverage --",
    "format": "prettier --write \"**/*.ts\"  \"!**/lib/**\"",
    "lint": "lerna run --stream lint --",
    "build": "lerna run --stream build --",
    "build:ci": "yarn build -p tsconfig.build.json",
    "build:doc": "rimraf -rf build/docs && typedoc",
    "link": "node dev-link link",
    "unlink": "node dev-link unlink",
    "storybook": "start-storybook -p 6006 -s .storybook/public",
    "storybook:build": "yarn storybook:deploy --dry-run",
    "storybook:deploy": "rimraf -rf build/storybook && storybook-to-ghpages -s .storybook/public -o build/storybook --ci",
    "prepare": "ts-dev-tools install"
  },
  "dependencies": {
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-controls": "^6.3.6",
    "@storybook/addon-docs": "^6.3.7",
    "@storybook/addon-info": "^6.0.0-alpha.2",
    "@storybook/addon-knobs": "^6.2.9",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/addon-storysource": "^6.3.7",
    "@storybook/addons": "^6.3.0",
    "@storybook/react": "^6.3.6",
    "@storybook/storybook-deployer": "^2.8.10",
    "@storybook/theming": "^6.2.6",
    "@ts-dev-tools/react": "^1.5.6",
    "barrelsby": "^2.2.0",
    "lerna": "^4.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "typedoc": "^0.21.5",
    "typedoc-plugin-nojekyll": "^1.0.1"
  },
  "resolutions": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "env": {
      "es2021": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off"
    }
  },
  "prettier": {
    "semi": true,
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "tsDevTools": {
    "version": "20201111162698-init"
  }
}
