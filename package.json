{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna bootstrap && lerna run --parallel start --",
    "test": "lerna run --stream test --",
    "test:ci": "lerna run --stream test:coverage --",
    "format": "prettier --cache --write '**/*.ts' '!**/lib/**'",
    "lint": "lerna run --stream lint --",
    "build": "lerna run --stream build --",
    "build:ci": "yarn build -p tsconfig.build.json",
    "link": "node dev-link link",
    "unlink": "node dev-link unlink",
    "docs:build": "lerna run --stream build:docs",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook -o build/storybook",
    "storybook:deploy": "storybook-to-ghpages -e build/storybook --ci",
    "prepare": "ts-dev-tools install"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^8.0.9",
    "@storybook/addon-controls": "^8.0.9",
    "@storybook/addon-docs": "^8.0.9",
    "@storybook/addon-info": "^6.0.0-alpha.2",
    "@storybook/addon-knobs": "^7.0.2",
    "@storybook/addon-links": "^8.0.9",
    "@storybook/addon-storysource": "^8.0.9",
    "@storybook/addons": "^7.6.17",
    "@storybook/builder-webpack5": "^8.0.9",
    "@storybook/manager-webpack5": "^6.5.15",
    "@storybook/react": "^8.0.9",
    "@storybook/storybook-deployer": "^2.8.16",
    "@storybook/theming": "^8.0.9",
    "@ts-dev-tools/react": "^1.5.38",
    "barrelsby": "^2.5.1",
    "lerna": "^8.0.0",
    "react": "^18.2.0",
    "react-docgen-typescript-plugin": "^1.0.5",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "typedoc": "^0.25.0"
  },
  "resolutions": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "env": {
      "es2021": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off"
    }
  },
  "prettier": {
    "semi": true,
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "tsDevTools": {
    "version": "20220617100200-prettier-cache"
  }
}
