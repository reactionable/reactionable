{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna run --parallel start --",
    "test": "lerna run --stream test --",
    "test:coverage": "lerna run --stream test:coverage --",
    "format": "prettier --write \"**/*.ts\"  \"!**/lib/**\"",
    "lint": "lerna run --stream lint --",
    "build": "lerna run --stream build --",
    "build:doc": "rimraf -rf build/docs && typedoc",
    "publish": "lerna publish --yes",
    "link": "node dev-link link",
    "unlink": "node dev-link unlink",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "yarn storybook:deploy --dry-run",
    "storybook:deploy": "rimraf -rf build/storybook && storybook-to-ghpages -o build/storybook --ci",
    "postinstall": "ts-dev-tools install"
  },
  "dependencies": {
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.7",
    "@storybook/addon-actions": "^6.1.2",
    "@storybook/addon-controls": "^6.1.2",
    "@storybook/addon-docs": "^6.1.2",
    "@storybook/addon-info": "^6.0.0-alpha.2",
    "@storybook/addon-knobs": "^6.1.2",
    "@storybook/addon-links": "^6.1.2",
    "@storybook/addon-storysource": "^6.1.2",
    "@storybook/addons": "^6.1.2",
    "@storybook/react": "^6.1.2",
    "@storybook/storybook-deployer": "^2.8.7",
    "@storybook/theming": "^6.1.2",
    "@ts-dev-tools/react": "^1.4.1",
    "babel-loader": "^8.1.0",
    "lerna": "^3.22.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "typedoc": "^0.19.2",
    "typedoc-plugin-nojekyll": "^1.0.1"
  },
  "resolutions": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "engines": {
    "yarn": ">=1.17.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "env": {
      "es2021": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "17.0.1"
      }
    }
  },
  "prettier": {
    "semi": true,
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged && pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn lint && yarn test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ]
  },
  "tsDevTools": {
    "version": "20201111162698-init"
  }
}
