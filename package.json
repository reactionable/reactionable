{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna bootstrap && lerna run --parallel start --",
    "test": "lerna run --stream test --",
    "test:ci": "lerna run --stream test:coverage --",
    "format": "prettier --cache --write '**/*.ts' '!**/lib/**'",
    "lint": "lerna run --stream lint --",
    "lint:ci": "lerna run --stream lint:ci --",
    "build": "lerna run --stream build --",
    "build:ci": "lerna run --stream build:ci --",
    "build:all": "yarn build:ci && yarn docs:build && yarn storybook:build",
    "link": "node dev-link link",
    "unlink": "node dev-link unlink",
    "docs:build": "lerna run --stream build:docs",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "yarn build-storybook -o build/storybook",
    "prepare": "ts-dev-tools install",
    "ci": "yarn lint && yarn build:all && yarn test:ci",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@jridgewell/gen-mapping": "^0.3.13",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-links": "^10.1.10",
    "@storybook/addon-onboarding": "^10.1.10",
    "@storybook/react": "^10.1.10",
    "@storybook/react-vite": "^10.1.10",
    "@ts-dev-tools/react": "^1.9.11",
    "barrelsby": "^2.5.1",
    "eslint-plugin-storybook": "^10.1.10",
    "lerna": "^9.0.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "remark-gfm": "^4.0.0",
    "rimraf": "^6.1.2",
    "storybook": "^10.1.10",
    "typedoc": "^0.28.15",
    "vite": "^7.3.0"
  },
  "resolutions": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "semi": true,
    "printWidth": 100,
    "trailingComma": "es5",
    "plugins": []
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-nx-scopes"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "tsDevTools": {
    "version": "20250623095600-remove-prettier-oxc"
  }
}
