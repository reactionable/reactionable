{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.23",
    "@types/node": "^13.1.0",
    "@types/react": "^16.9.13",
    "@types/react-dom": "^16.9.4",
    "@types/react-helmet": "^5.0.14",
    "@types/react-router-dom": "^5.1.2",
    "@types/yup": "^0.26.24",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "barrelsby": "^2.2.0",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.7.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-formatter-friendly": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^4.0.0",
    "jest": "^25.1.0",
    "lerna-update-wizard": "^0.17.2",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^25.0.0",
    "typedoc": "^0.16.9",
    "typedoc-plugin-lerna-packages": "^0.3.0",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "start": "npm run bootstrap && lerna run start --parallel",
    "test": "lerna run test --parallel",
    "format": "prettier --write \"**/*.ts\"  \"!**/lib/**\"",
    "lint": "eslint \"packages/**/{src,__tests__}/**/*.ts\" -f eslint-formatter-friendly",
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna run build",
    "build:doc": "rimraf -rf docs && typedoc",
    "build:publish": "npm run bootstrap && npm run build && npm run build:doc",
    "lernaupdate": "lernaupdate",
    "publish": "lerna publish --yes",
    "link": "cd node_modules/react && npm link && cd ../react-dom && npm link && cd ../.. && npm run bootstrap && lerna run link --parallel"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "prepare-commit-msg",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
