{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start --parallel",
    "test": "lerna run test",
    "test:coverage": "lerna run test:coverage",
    "format": "prettier --write \"**/*.ts\"  \"!**/lib/**\"",
    "lint": "lerna run lint --",
    "build": "lerna run build",
    "build:doc": "rimraf -rf docs && typedoc",
    "publish": "lerna publish --yes",
    "link": "for package in react react-dom react-router-dom aws-amplify; do cd node_modules/$package && yarn link && cd ../..; done && lerna exec yarn link",
    "unlink": "for package in react react-dom react-router-dom aws-amplify; do cd node_modules/$package && yarn unlink && cd ../..; done && lerna exec yarn unlink",
    "storybook": "start-storybook -p 6006",
    "build:storybook": "build-storybook -o build/storybook"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-i18next": "^11.7.3",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@storybook/addon-actions": "^6.0.22",
    "@storybook/addon-controls": "^6.0.22",
    "@storybook/addon-docs": "^6.0.22",
    "@storybook/addon-info": "^6.0.0-alpha.2",
    "@storybook/addon-knobs": "^6.0.26",
    "@storybook/addon-links": "^6.0.22",
    "@storybook/addon-storysource": "^6.0.26",
    "@storybook/addons": "^6.0.16",
    "@storybook/react": "^6.0.22",
    "@storybook/theming": "^6.0.21",
    "@types/react": "^16.9.50",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^3.10.1",
    "babel-loader": "^8.1.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "import-sort-style-module": "^6.0.0",
    "lerna": "^3.22.1",
    "prettier": "^2.1.2",
    "prettier-plugin-import-sort": "^0.0.6",
    "typedoc": "^0.19.2",
    "typedoc-plugin-nojekyll": "^1.0.1"
  },
  "engines": {
    "yarn": ">=1.17.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint --fix"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
